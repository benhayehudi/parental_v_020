<div class="todo-address">
<% if @current_todo != nil %>
    <%= form_for([current_user, @current_todo], :html => {:id => 'address-form'}) do |f| %>
      <%= f.label :address, "add an address:" %><br>
      <%= f.text_field :address, :placeholder => 'enter a street address', size: 22 %>
      <br>
      <%= f.submit 'submit', :class => 'btn btn-primary', :id => 'submit-address' %>
    <% end %>
  <% end %>
</div>

<div class="todo-description">
<% if @current_todo != nil %>
  <%= form_for([current_user, @current_todo], :html => {:id => 'description-form'}) do |f| %>
    <%= f.label :description, "add some info" %>
    <br>
    <%= f.text_area :description %>
    <br>
    <%= f.submit 'add description', :class => 'btn btn-primary', :id => 'submit-description' %>
  <% end %>
<% end %>
<br>
</div>


<div class="todo-duedate">
<% if @current_todo != nil %>
  <%= form_for([current_user, @current_todo], :html => {:id => 'duedate-form'}) do |f| %>
    <%= f.label :duedate, "needs to get done by?" %>
    <br>
    <%= f.date_field :duedate, :value => @current_todo.duedate %>
    <br>
    <%= f.submit 'add due date', :class => 'btn btn-primary', :id => 'submit-duedate' %>
  <% end %>
<% end %>
<br>
</div>


<div class="todo-addtask">

</div>


<div class="todo-taskdone">
</div>


<div class="todo-done">
<% if @current_todo != nil %>
  <%= form_for([current_user, @current_todo], :html => {:id => 'tododone-form'}) do |f| %>
    <%= f.label "yes?" %>
    <%= f.radio_button :done, "true" %>
    <%= f.label "no?" %>
    <%= f.radio_button :done, "false" %>
    <br>
    <%= f.submit 'mark done', :class => 'btn btn-primary', :id => 'submit-tododone' %>
  <% end %>
<% end %>
<br>
<%= link_to 'return to your todos', parent_path(@parent), :style => 'color: black'  %>
</div>

</div>
